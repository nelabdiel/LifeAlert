{
  "manifest_version": 2,
  "name": "First-Time Login Alert",
  "version": "1.0",
  "description": "Alerts if you are signing in to a website for the first time.",
  "permissions": ["tabs", "webNavigation"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "manifest_version": 2
}

